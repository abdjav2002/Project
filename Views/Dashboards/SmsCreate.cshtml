@* ************** Content ************** *@
<!-- Basic Layout & Basic with Icons -->
<div class="row">
	<!-- Basic Layout -->
	<div class="col-xxl">
		<div class="card mb-4">
			<div class="card-header d-flex align-items-center justify-content-between">
				<h5 class="mb-0">Mark bulk Sms</h5>
			</div>
			<div class="card-body">
				<form id="smsForm" asp-action="SmsCreate" method="post" onsubmit="return submitForm()">
					<div asp-validation-summary="All" class="text-danger"></div>

					<div class="row mb-3">
						<div class="row mb-3">
							<label class="col-sm-2 col-form-label" for="emailtext">Email Subject</label>
							<div class="col-sm-10">
								<input id="sms-subject" type="text" class="form-control" required  asp-for="Subject" placeholder="Enter Sms Subject" />
							</div>
						</div>

						@* <div class="row mb-3">
							<label class="col-sm-2 col-form-label" for="emailtext">Sms Text</label>
							<div class="col-sm-10">
								<input id="sms-body" type="text" required class="form-control" asp-for="Sms" placeholder="Enter Sms body" />
							</div>
						</div> *@

						<div class="col-12">
							<div class="card mb-4">
								<h5 class="card-header">Snow Theme</h5>
								<div class="card-body">
									<div id="snow-toolbar">
