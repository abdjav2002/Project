								</tr>
							</thead>
							<tbody>
								@if (ViewBag.acc != null)
								{
									@foreach (var x in ViewBag.acc as List<Account>)
									{
										<tr id="@x.Accountid">
											<td><input type="checkbox" class="row-checkbox" name="selectedIds[]" value="@x.Accountid"></td>
											<td>@x.CustomerIdFk</td>
											<td>@x.Customeracnumber</td>
											<td>@x.Overdueamount</td>
											<td>@x.Lastpayment</td>
