<div class="card">
	<div class="col-3">
		<a asp-action="ActionCodeCreate"><button class="dt-button add-new btn btn-primary waves-effect waves-light my-3">Add Action Code</button></a>
	</div>
	@if (Model != null && Model.Count > 0)
		{
	<table id="example" class="display nowrap" style="width:100%">
		<thead>
			<tr>
				<th>ID</th>
				<th>Code</th>
				<th>Name</th>
				<th>Description</th>
				<th>Color</th>
				<th>Amount</th>
				<th>Date</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var a in Model)
			{
				<tr>
						<td>@a.ActionId</td>
						<td>@a.Actioncode1</td>
						<td>@a.Aname</td>
						<td>@a.Adescription</td>
						<td style="background-color:@a.Color">@a.Color</td>
						<td>@(a.Amount ==1? "Yes" : "No")</td>
						<td>@(a.FollowUpDate ==1? "Yes" : "No")</td>
				</tr>
			}
		</tbody>
		<tfoot>
			<tr>
				<th>ID</th>
				<th>Code</th>
				<th>Name</th>
				<th>Description</th>
					<th>Amount</th>
					<th>Date</th>
			</tr>
		</tfoot>
	</table>
		}else{
			<p>No Action Code Found.</p>
		}
</div>
