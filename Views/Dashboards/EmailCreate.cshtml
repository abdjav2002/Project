@* ************** Content ************** *@
<!-- Basic Layout & Basic with Icons -->
<div class="row">
	<!-- Basic Layout -->
	<div class="col-xxl">
		<div class="card mb-4">
			<div class="card-header d-flex align-items-center justify-content-between">
				<h5 class="mb-0">Mark bulk Email</h5>
			</div>
			<div class="card-body">
				<form asp-action="EmailCreate" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>

					<div class="row mb-3">
						<div class="row mb-3">
							<label class="col-sm-2 col-form-label" for="emailtext">Email Text</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" required id="CampaignslistsName" asp-for="Email" placeholder="Enter Email Text" />
							</div>
						</div>

						<table id="example" class="display nowrap" style="width:100%">
							<thead>
								<tr>
									<th></th>
									<th>ID</th>
									<th>Name</th>
									<th>Gender</th>
									<th>Passport</th>
									<th>Cnic</th>
								</tr>
							</thead>
							<tbody>
								@if (ViewBag.acc != null)
								{
									@foreach (var x in ViewBag.acc as List<Account>)
									{
										<tr id="@x.Accountid">
											<td><input type="checkbox" class="row-checkbox" name="selectedIds[]" value="@x.Accountid"></td>
											<td>@x.CustomerIdFk</td>
											<td>@x.Customeracnumber</td>
											<td>@x.Overdueamount</td>
											<td>@x.Lastpayment</td>
											<td>@x.Lastpaymentdate</td>
										</tr>
									}
								}
								else
								{
									<span>No users available</span>
								}

							</tbody>
							<tfoot>
								<tr>
									<th></th>
									<th>ID</th>
									<th>Name</th>
									<th>Gender</th>
									<th>Passport</th>
									<th>Cnic</th>
								</tr>
							</tfoot>
						</table>


						<div class="row justify-content-end">
							<div class="col-sm-10">
								<button type="submit" class="btn btn-primary">Mark</button>
							</div>
						</div>
				</form>
			</div>
		</div>
	</div>
</div>



