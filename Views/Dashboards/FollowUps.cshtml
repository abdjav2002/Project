<!-- Users List Table -->
<div class="card">
	@if (Model.Count() > 0)
	{
		<table id="example" class="display nowrap" style="width:100%">
			<thead>
				<tr>
					<th>Cust.No</th>
					<th>Status Code</th>
					<th>Action Code</th>
					<th>Remarks</th>
					<th>Date</th>
					<th>Amount</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var rem in Model)
				{
					<tr>
						<td>@rem.AccountIdFkNavigation!.Customeracnumber</td>
						<td>@rem.StatuscodeIdFkNavigation!.Statuscode1</td>
						<td>@rem.ActioncodeIdFkNavigation!.Actioncode1</td>
						<td>@rem.RemarkText</td>
						<td>@rem.PtpDate</td>
						<td>@rem.PtpAmount</td>
						<td><a class="btn btn-warning" asp-action="updateRemarks" asp-route-id="@rem.AccountIdFk">More</a></td>
						<td></td>
					</tr>
				}

			</tbody>
			<tfoot>
				<tr>
					<th>Cust.No</th>
					<th>Status Code</th>
					<th>Action Code</th>
					<th>Remarks</th>
					<th>Date</th>
					<th>Amount</th>
					<th></th>
					<th></th>
				</tr>
			</tfoot>
		</table>
	}
	else
	{
		<p>NO Follow Ups</p>
	}
</div>
